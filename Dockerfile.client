FROM node:20-alpine AS base
WORKDIR /app

COPY client/package*.json ./client/
WORKDIR /app/client
RUN npm install

FROM base AS dev
WORKDIR /app/client
EXPOSE 5173
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

FROM base AS build
WORKDIR /app/client
COPY client/ ./
RUN npm run build

FROM nginx:alpine AS prod
COPY --from=build /app/client/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
